@model PropertyViewModel;
@{
    ViewData["Title"] = "Property Details";
}

<main id="main">
    <!-- ======= Intro Single ======= -->
    <section class="intro-single prop-detail-sec">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">@Html.DisplayFor(x => x.County)</h1>
                        <span class="color-text-a">@Html.DisplayFor(x => x.Address)</span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @Html.DisplayFor(x => x.County)
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->
