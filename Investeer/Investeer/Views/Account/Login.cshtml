@using Investeer.Models.Models;
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<main id="main">

    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Welcome to TheInvesteer</h1>
                        <!-- <span class="color-text-a">Aut voluptas consequatur unde sed omnis ex placeat quis eos. Aut natus officia corrupti qui autem fugit consectetur quo. Et ipsum eveniet laboriosam voluptas beatae possimus qui ducimus. Et voluptatem deleniti. Voluptatum voluptatibus amet. Et esse sed omnis inventore hic culpa.</span> -->
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Sign In
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->
    <!-- ======= Contact Single ======= -->
    <section class="contact">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-sm-12">
                    <div class="row no-gutters register-box-bg">
                        <div class="col-lg-7">
                            <div class="register-box">
                                <form id="account" method="post" class="php-email-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row justify-content-center">

                                            <div class="col-md-8 col-sm-12">
                                                <div class="row">
                                                    <div class="col-lg-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="email" class="form-control form-control-lg form-control-a" asp-for="Email" placeholder="Email ID" required>
                                                        </div>
                                                    </div>
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                    <div class="col-lg-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="password" class="form-control form-control-lg form-control-a" placeholder="Password" asp-for="Password">
                                                        </div>
                                                    </div>
                                                    <span asp-validation-for="Password" class="text-danger"></span>

                                                    <div class="col-lg-12 text-center">
                                                        <hr>
                                                    </div>

                                                    <div class="col-lg-12 text-center mb-3">
                                                        <a asp-controller="Account" asp-action="ForgotPassword">FORGOT YOUR PASSWORD?</a>
                                                    </div>


                                                    <div class="col-lg-12 text-center mb-3">
                                                        <button type="submit" class="btn btn-a w-100">SIGN IN</button>
                                                    </div>
                                                    <div class="col-lg-12 text-center">
                                                        <a asp-controller="Account" asp-action="Register" class="btn btn-a btn-a-primary w-100">Create an Account</a>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                            </div>
                        </div>

                        <div class="col-lg-5">
                            <div class="imgbox">
                                <img src="../assets/img/login-img.jpg" class="img-fluid">

                            </div>
                        </div>

                    </div>
                </div>





            </div>
        </div>
    </section><!-- End Contact Single-->

</main><!-- End #main -->
