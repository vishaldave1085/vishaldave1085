@using Investeer.Models.ViewModels;
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<main id="main">

    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Registration</h1>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Registration
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->
    <!-- ======= Contact Single ======= -->
    <section class="contact">
        <div class="container">
            <div class="row">

                <div class="col-sm-12">
                    <div class="row no-gutters register-box-bg">
                        <div class="col-lg-7">
                            <div class="register-box">
                                <form asp-action="Register" asp-controller="Account" method="post" role="form" class="php-email-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <input class="form-control form-control-lg form-control-a" placeholder="First Name" asp-for="FirstName">
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <input class="form-control form-control-lg form-control-a" placeholder="Last Name" asp-for="LastName">
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <input class="form-control form-control-lg form-control-a" placeholder="Email ID" asp-for="Email">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <input class="form-control form-control-lg form-control-a" placeholder="Mobile Number" asp-for="ContactNumber">
                                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-lg form-control-a" placeholder="Password" asp-for="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            <div class="form-group">
                                                <label class="rowcheckbox">
                                                    I agree with <a href="#!">Terms & Conditions</a>
                                                    <input type="checkbox" asp-for="Terms">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <span asp-validation-for="Terms" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 text-center">
                                            <hr>
                                        </div>

                                        <div class="col-lg-12 text-center">
                                            <button type="submit" class="btn btn-a" asp-route-returnUrl="@ViewBag.returnUrl">REGISTER</button>
                                        </div>
                                        <div class="col-lg-12 text-center mt-4">
                                            Already registered? <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewBag.returnUrl">Sign in</a>.
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="imgbox">
                                <img src="../assets/img/register-img.jpg" class="img-fluid">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>