<script type="text/javascript">
    $("#contactform").submit(function (e) {
        e.preventDefault();
        if ($('#contactform').valid()) {
            var data =
            {
                Name: $('#Name').val()
                , EmailId: $('#EmailId').val()
                , Subject: $('#Subject').val()
                , Message: $('#Message').val()
            }
            console.log(data);
            $.ajax({
                type: "POST",
                url: "/Home/Contact",
                data: data,
                dataType: "json",
                success: function (data) {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thanks for contact',
                            text: 'We will get back to you soon',
                        }
                        );
                        $('#Name').val('');
                        $('#EmailId').val('');
                        $('#Subject').val('');
                        $('#Message').val('');
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: data.msg,
                        });
                    }
                }
            });
        }
    });
</script>